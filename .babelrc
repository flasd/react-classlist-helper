{
    "env": {
        "test": {
            "presets": [
                [
                    "env",
                    {
                        "targets": {
                            "node": "current"
                        }
                    }
                ]
            ]
        },

        "production": {
            "presets": [
                [
                    "env",
                    {
                        "targets": {
                            "browsers": "> 1%, last 2 versions, ie 8"
                        }
                    }
                ]
            ],
            "plugins": [
                "babel-plugin-loop-optimizer"
            ]
        }
    }
}